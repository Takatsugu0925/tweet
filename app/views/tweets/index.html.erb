<div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>

<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>つぶやき一覧</h1>
      <%= link_to "つぶやく", new_tweet_path, class: "btn btn-info" %>
    <% @tweets.each do |tweet| %>
    <div class="row">
      <p><%= tweet.content %></p>
      <%= link_to "編集", edit_tweet_path(tweet.id), class: "btn btn-info" %>
      <%= link_to "削除", tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: "btn btn-info" %>
    </div>
    <% end %>
  </div>
</div>